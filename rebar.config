%% -*- erlang -*-
{erl_opts,[debug_info]}.
{deps_dir, ["deps"]}.
{deps, [{syslog, "1.0.1", {git, "git://github.com/Vagabond/erlang-syslog.git", {tag, "1.0.1"}}},
        {parse_trans, "2.6", {git, "git://github.com/esl/parse_trans.git", {tag, "2.6"}}},
        {edown, "0.2.9", {git, "git://github.com/si14/edown.git", {tag, "0.2.9"}}}]}.
{cover_enabled, true}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{doclet, edown_doclet},
             {top_level_readme, {"./README.md", "https://github.com/siberian-fast-food/alogger"}}]}.
{sub_dirs, []}.
